#include <bits/stdc++.h>
#define int long long int
using namespace std;
int32_t main()
{
    int n;
    cin>>n;
    int ans=0,term=1;
    for(int i=1;i<=n;i++)
    {
        term*=2;
        ans+=(term);
    }
    cout<<ans;
    return 0;
}
